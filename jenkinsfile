pipeline{
    agent any
    stages{
        stage('LinuxCheck'){
            agent{
                label 'slave-1'
            }
            steps{
            sh 'java -version'
        }
        }
        stage('WindowsCheck'){
            agent{
                label 'windows-slave'
            }
            steps{
                bat 'choco -v'
            }
        }
        stage('DockerCheck'){
            agent{
                docker{
                image 'maven:latest'
            }
            }
            steps{
                sh 'echo "Radi Docker! ${BUILD_NUMBER}"'
            }
        }
    }
}